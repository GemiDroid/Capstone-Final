<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/space_10">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friendImage"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_60"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_marginRight="@dimen/space_10"
            android:src="@drawable/ic_account_circle_black_24dp" />

        <ImageView
            android:contentDescription="@string/title_friends"
            android:id="@+id/friendOnlineIcon"
            android:layout_width="@dimen/space_20"
            android:layout_height="@dimen/space_20"
            android:layout_alignBottom="@id/friendImage"
            android:layout_alignRight="@id/friendImage"
            android:src="@drawable/ic_fiber_manual_record_black_24dp"
            android:visibility="invisible" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_60"
        android:layout_marginLeft="@dimen/space_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/friendName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/space_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/friendLastMSG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>