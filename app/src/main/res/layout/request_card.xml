<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/requestCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/space_10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/requestImage"
        android:layout_width="@dimen/space_70"
        android:layout_height="@dimen/space_70"
        android:src="@drawable/ic_account_circle_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_70"
        android:layout_marginLeft="@dimen/space_7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/requestName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/space_15"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:layout_weight="1">

            <Button
                android:textAllCaps="false"
                android:id="@+id/requestConfirmBTN"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/confirm"
                android:textColor="@color/white" />

            <Button
                android:textAllCaps="false"
                android:id="@+id/requestDeleteBTN"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_weight="1"
                android:background="@drawable/buttongray"
                android:text="@string/delete"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>